@model BBMSASP.Core.Models.BloodGroup

<div class="row">
    <div class="col-md-12">
        <form asp-action="Index" asp-area="Admin" asp-controller="BloodGroup" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupName" class="control-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary pull-right" />
            </div>
        </form>
    </div>
</div>